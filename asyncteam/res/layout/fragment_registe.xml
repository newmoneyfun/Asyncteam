<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    
    <EditText 
        android:id="@+id/et_registe_account"
        android:maxLength="30"
        style="@style/edit_style"
        android:hint="@string/str_login_account"
        />
    
    <EditText 
        android:id="@+id/et_registe_password"
        style="@style/edit_style"
        android:inputType="textPassword"
        android:hint="@string/str_login_password"
        />
     <EditText 
        android:id="@+id/et_registe_password_confirm"
        style="@style/edit_style"
        android:inputType="textPassword"
        android:hint="@string/str_login_password_confrim"
        />
       <EditText 
        android:id="@+id/et_registe_email"
        style="@style/edit_style"
        android:inputType="textEmailAddress"
        android:hint="@string/str_login_email"
        />
    

    <RelativeLayout android:layout_width="fill_parent"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_height="45dip">
        
        
        
        <Button
            android:id="@+id/btn_registe_submit"
            android:layout_width="100dip"
            android:layout_height="fill_parent"
            android:text="submit"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_green_normal"/>
    </RelativeLayout>
    
    

    
    
    

</LinearLayout>
