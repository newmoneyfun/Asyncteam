<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:background="@color/white"/>
    
	<RelativeLayout 
            android:background="@drawable/abc_ab_bottom_solid_dark_holo"
            android:layout_width="match_parent" 
    		android:layout_height="wrap_content" 
    		android:padding="12dip"
            >
            <LinearLayout 
                android:orientation="horizontal"
                android:layout_width="wrap_content" 
    			android:layout_height="wrap_content" 
    			android:layout_alignParentLeft="true"
    			android:gravity="center"
                >
                <ImageView 
                    android:id="@+id/imgv_title_back"
                    android:layout_width="wrap_content" 
    				android:layout_height="35dp" 
    				android:background="@drawable/back"
                    />
                <ImageView 
                    android:id="@+id/imgv_title_logo"
                    android:layout_width="35dp" 
    				android:layout_height="35dp" 
    				android:background="@drawable/icon"
                    />
                <TextView
                    android:id="@+id/tv_title_name"
                    android:layout_width="wrap_content" 
    				android:layout_height="wrap_content" 
    				android:text="微信"
    				android:layout_marginLeft="10dip"
    				android:textSize="18dp"
    				android:textColor="@color/lightgray"
                    />
            </LinearLayout>
            <LinearLayout 
                android:orientation="horizontal"
                android:layout_width="wrap_content" 
    			android:layout_height="wrap_content" 
    			android:layout_alignParentRight="true"
    			android:gravity="center"
                >
                <ImageView 
                    android:id="@+id/imgv_title_menu_left"
                    android:layout_marginRight="20dip"
                    android:layout_width="30dp" 
    				android:layout_height="30dp" 
    				android:src="@drawable/actionbar_search_icon"
                    />
                 <ImageView 
                     android:id="@+id/imgv_title_menu_middle"
                    android:layout_width="30dp" 
    				android:layout_height="30dp" 
    				android:layout_marginRight="20dip"
    				android:src="@drawable/actionbar_add_icon"
                    />
                  <ImageView 
                      android:id="@+id/imgv_title_menu_right"
                    android:layout_width="30dp" 
    				android:layout_height="30dp" 
    				android:src="@drawable/actionbar_more_icon"
                    />
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>